<div class="container">

  <h1> <%= "#{@user.first_name} #{@user.last_name}" %> </h1>
  <% if current_user %>
<%= link_to "Edit profile",  edit_user_path(current_user)  , {class: "btn btn-primary"} %>
<% end %>
  <h2> <%= "#{@user.first_name}'s watches" %> </h2>
  <div class="container">
    <div class="row">
      <% @user.watches.each do |watch| %>
        <div class="col-md-3">
          <%= link_to user_watch_path(@user, watch) do %>
            <%= cl_image_tag watch_photo_or_stub(watch), width: 200, height: 200, crop: :fill %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

