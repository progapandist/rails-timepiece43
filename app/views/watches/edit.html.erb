<div class="wrapper" id="new_watch_wrapper">
  <div class="form-container">
      <%= simple_form_for @watch do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price, :label => "Price /day" %>
        <%= f.input :photo, as: :attachinary %>
        <div class="add-watch-btn">
        <%= f.submit "Update info!", class: "btn btn-danger" %>
      <% end %>
      </div>
    </div>
  </div>
