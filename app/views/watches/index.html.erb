<div class="banner" style="background-image: linear-gradient(-225deg, rgba(11,72,135,0.43) 0%, rgba(0,12,12,0.6) 86%),  url(<%= cl_image_path("unkz1zlofox8pjqec424") %>);">
  <div class="banner-content">
    <h1>Feel history on your wrist </h1>
     <% if (user_signed_in?) %>
    <a><%= link_to "Add your watch", new_watch_path(@watch), class: "home-button btn btn-primary btn-lg" %></a>
     <a href="#watches" class="home-button btn btn-primary btn-lg" > Find inspiration</a>
      <% else  %>
    <a><%= link_to "Sign up", new_user_registration_path, class: " home-button btn btn-primary btn-lg" %></a>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @watches.each do |watch| %>
    <div class="col-xs-12 col-sm-3">
      <div class="dashboard-card">
          <div class="dashboard-card-body">
          <div class="dashboard-card-picture" style="background-image: url('<%= cl_image_path watch_photo_or_stub(watch)%>')">
          </div>
            <div class="dashboard-card-hover text-center">
              <h4><%= watch.name %></h4>
              <p><%= watch.description %></p>
              <%= link_to "", watch_path(watch), class: "dashboard-card-link" %>
            </div>
            <div class="dashboard-card-price">
              <ul class="list-inline">
                <li><i class="fa fa-money"></i> <%= watch.price %>â‚¬/day</li>
                <li><i class="fa fa-eye"></i> Rented: <% if watch.bookings.count > 1%><%= watch.bookings.count %> times <% else %><%= watch.bookings.count %> time<% end %></li>
              </ul>
            </div>
          </div>
        </div>
    </div>
    <% end %>
  </div>
</div>




