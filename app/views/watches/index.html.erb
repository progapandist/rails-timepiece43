<div class="banner" style="background-image: linear-gradient(-225deg, rgba(11,72,135,0.43) 0%, rgba(0,12,12,0.6) 86%),  url(<%= image_path 'time_background.jpg'%>);">
  <div class="banner-content">
    <h1>Feel history on your wrist </h1>
     <% if (user_signed_in?) %>
    <a><%= link_to "Add your watch", new_watch_path(@watch), class: "home-button btn btn-primary btn-lg" %></a>
     <a href="#watches" class="home-button btn btn-primary btn-lg" > Find inspiration</a>
      <% else  %>
    <a><%= link_to "Sign up", new_user_registration_path, class: " home-button btn btn-primary btn-lg" %></a>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @watches.each do |watch| %>
    <div class="col-xs-12 col-sm-4">
      <a id="watches"></a>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url( <%= cl_image_path watch_photo_or_stub(watch), crop: :fill %> );">
        <div class="card-description">
          <h2><%= watch.name %></h2>
          <p><%= watch.price %>â‚¬/day</p>
        </div>
        <a class="card-link" href= ></a>
        <%= link_to "", watch_path(watch), class:"card-link"  %>
      </div>
    </div>
    <% end %>
  </div>
</div>




