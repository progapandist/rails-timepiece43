<div class="wrapper" id="new_watch_wrapper">
    <div class="form-container">
      <% label = (params[:action] == "new") ? "List a timepiece" : "Update a timepiece"  %>
        <%= simple_form_for @watch do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price, :label => "Price /day" %>
        <%= f.input :location %>
        <%= f.input :photo, as: :attachinary %>
        <div class="add-watch-btn">
          <%= f.submit label, class: "btn btn-primary" %>
          <% end %>
        </div>
    </div>
</div>
