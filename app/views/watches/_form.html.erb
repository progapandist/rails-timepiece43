<% label = (params[:action] == "new") ? "List a timepeiece" : "Update a timepiece"  %>
<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <%= simple_form_for @watch do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :price, :label => "Price /day" %>
      <%= f.input :location %>
      <%= f.input :photo, as: :attachinary %>
      <%= f.submit label, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
