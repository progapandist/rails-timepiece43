<% @bookings.each do |booking| %>
  <p><%= booking.watch.name %></p>
  <p><%= booking.start %></p>
  <p><%= booking.end %></p>
  <p><%= booking.user.first_name %> <%= booking.user.last_name %></p>
  <p><%= booking.status %></p>

  <% if booking.status == "pending" %>
  <%= link_to "Accept the booking", accept_booking_path(booking), class: "btn btn-primary"  %>
  <%= link_to "Decline the booking", reject_booking_path(booking), class: "btn btn-danger"  %>
  <% end %>

  <% if booking.status == "accepted" %>
  <%= link_to "Decline the booking", reject_booking_path(booking), class: "btn btn-danger"  %>
  <% end %>

  <% if booking.status == "declined" %>
  <%= link_to "Accept the booking", reject_booking_path(booking), class: "btn btn-primary"  %>
  <% end %>

<% end   %>



